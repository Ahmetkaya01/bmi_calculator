<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010203"
    tools:context=".Articles_Of_Meditation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp">

            </View>
            <TextView
                android:layout_width="347dp"
                android:layout_height="38dp"
                android:paddingLeft="20dp"
                android:text="Articles Of Yoga"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/benefitsofmeditation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="255dp"
                android:paddingRight="50dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/plscapture"
                android:text="6 Benefits of Meditation" />

            <Button
                android:id="@+id/typeofmeditation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="265dp"
                android:paddingRight="100dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/medo"
                android:text="Types Of MEdidation" />
            <Button
                android:id="@+id/shouldmeditation"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="265dp"
                android:paddingRight="30dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/morningmeditation"
                android:text="Why Should You Meditate?" />
            <Button
                android:id="@+id/wanttostart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="250dp"
                android:paddingRight="40dp"
                android:layout_marginRight="20dp"
                android:textSize="22dp"

                android:textStyle="bold"
                android:background="@drawable/moonmedi"
                android:text="Want to Start Meditating?"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>