<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>
            <TextView
                android:id="@+id/advice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:text="Healthy Eating Basics"
                android:textColor="#000"
                android:textSize="30sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                app:srcCompat="@drawable/womanchopping" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="Eating a healthy, balanced diet is one of the most important things you can do to protect your health. In fact, up to 80% of premature heart disease and stroke can be prevented through your life choices and habits, such as eating a healthy diet and being physically active."
                android:textColor="#000"
                android:textSize="25sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>


            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                app:srcCompat="@drawable/food" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:text="A healthy diet can help lower your risk of heart disease and stroke by:

                1-improving your cholesterol levels
                2-reducing your blood pressure
                3-helping you manage your body weight
                4-controlling your blood sugar."
                android:textColor="#141414"
                android:textSize="23sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>

            //todo How to Prevent Obesity in Kids and Adults//


            <!-- things to scroll -->

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="249dp"
                app:srcCompat="@drawable/obese1" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"></View>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@drawable/edit_bg"
                android:textColor="#000"
                android:textSize="25sp"
                android:text="Go Big for Breakfast"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"></View>
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#141414"
                android:textSize="23sp"
                android:text="People who eat more in the morning and less at night tend to lose more weight. Some studies suggest that starting your day with a high-protein meal -- especially warm, solid food -- helps you feel fuller and less hungry later. Shoot for 350-400 calories with at least 25 grams of protein, says Domenica Rubino, MD, director of the Washington Center for Weight Management/Research." />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"></View>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="327dp"
                app:srcCompat="@drawable/obesebreakfast" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#000"
                android:background="@drawable/edit_bg"
                android:textSize="25sp"
                android:text="Keep a Photo Diary"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="‘We have horrible memories in terms of what we eat,’ says Susan Albers, PsyD, author of EatQ. Save your food photos in a daily file. Before your next snack or meal, review them. They'll remind you what you've already eaten. And that may help you decide to downsize or choose something else." />
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>


            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/obesetakepic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:text="Try a Meal Replacement Plan"
                android:textColor="#000"
                android:textSize="25sp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="Under a licensed professional's care, you'll eat one regular meal per day and swap the others for special shakes, soups, or bars. ''If you can stick to it, you'll see big results in 6 months to a year,'' says Ken Fujioka, MD, an obesity specialist at the Scripps Clinic in San Diego."/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/tryameal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:text="Set Up Your Food Storage"
                android:textColor="#000"
                android:textSize="25sp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="20sp"
                android:text="Out of sight, out of mind -- and mouth. After you purge your home of those treats you can't resist, Albers recommends taking the idea a step further: Assign shelves in the pantry and the fridge so your healthy food becomes easy to see and reach. Put fresh veggies and fruit at eye level instead of inside a drawer, and you're more likely to grab them when you open the door."/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>
            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/setup" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp">
            </View>

            <Button
                android:id="@+id/show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:text="See The Exercise"
                android:textColor="#fafafa" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>