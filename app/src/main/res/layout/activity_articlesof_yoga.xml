<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010203"
    tools:context=".ArticlesofYoga">

    <View
        android:layout_width="fill_parent"
        android:layout_height="20dp"></View>
    <TextView
        android:layout_width="347dp"
        android:layout_height="38dp"
        android:paddingLeft="20dp"
        android:text="Articles Of Yoga"
        android:textColor="#FDFEFE"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/yogandpain"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="265dp"
                android:paddingRight="180dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/yogaforchronic"
                android:text="Yoga And Pain" />

            <Button
                android:id="@+id/yogaforevery"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="255dp"
                android:paddingRight="120dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/yogacanforeveryone"
                android:text="Yoga For Everyone" />
            <Button
                android:id="@+id/yogapro"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="265dp"
                android:paddingRight="200dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/fivebasicyogaposes"
                android:text="Yoga Poses" />
            <Button
                android:id="@+id/yogamoves12"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FDFEFE"
                android:paddingTop="265dp"
                android:paddingRight="180dp"
                android:layout_marginRight="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:background="@drawable/targetabs"
                android:text="12 Yoga Moves"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"></View>
        </LinearLayout>
    </ScrollView>
</LinearLayout>




