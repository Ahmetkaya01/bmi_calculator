                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="#808080"

                    android:text="Browse"
                    android:textColor="#fafafa"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">
