        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp">
            </View>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                app:adSize="BANNER"
                app:adUnitId="ca-app-pub-3940256099942544~3347511713">

            </com.google.android.gms.ads.AdView>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp">
            </View>

            //TODO
            CHANGE TEXT STYLE//

            <TextView
                android:id="@+id/textView"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:text="Browse"
                android:textColor="#fafafa"
                android:textStyle="bold"
                android:textSize="30dp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp">
            </View>

            //done
            <Button
                android:id="@+id/fitnessarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/fitnes99"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/articlefitness" />


            //done
            <Button
                android:id="@+id/yogaarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yogaiconorginal"
                android:text="@string/articleyoga"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold" />


            //done
            <Button
                android:id="@+id/walkingarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/walkingicon1"
                android:text="@string/articlewalking"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold" />

