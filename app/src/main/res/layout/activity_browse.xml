<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010203"

    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".Articles">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp">
            </View>

            //TODO
            CHANGE TEXT STYLE//

            <Button
                android:id="@+id/bmicalculator"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@android:color/holo_orange_dark"
                android:text="New/Trending" />


            <Button
                android:id="@+id/fitnessarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/fitnes99"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="@string/articlefitness" />



            <Button
                android:id="@+id/yogaarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/yogaiconorginal"
                android:text="@string/articleyoga"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold" />



            <Button
                android:id="@+id/walkingarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/walkingicon1"
                android:text="@string/articlewalking"
                android:textColor="#FDFEFE"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dancearticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/dance1998" />

            <Button
                android:id="@+id/runningarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/runningiconcan19"
                android:text="@string/articlerunning" />

            <Button
                android:id="@+id/nutritionarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:background="@drawable/nutrition19919"
                android:text="@string/articlenutrition" />


            <Button
                android:id="@+id/medidationarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/meditation1998"
                android:text="@string/articlemedidation" />

            <Button
                android:id="@+id/sleepacticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/sleepicon1090"
                android:text="@string/articlesleep" />

            <Button
                android:id="@+id/musicsoundsarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:background="@drawable/piano1909"
                android:text="@string/articlemusicsounds" />

            <Button
                android:id="@+id/tipsarticle"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/tipsicon"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="@string/articletips" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp">
            </View>

        </LinearLayout>

    </ScrollView>

</LinearLayout>