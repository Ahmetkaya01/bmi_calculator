<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp">

            </View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:background="@android:color/background_dark">

            </View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginVertical="25dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="BMI "
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="342dp"
                android:layout_height="29dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="Type Your Weight in {Kg}"
                android:textStyle="bold" />

            /TYPE YOUR WEIGHT

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp">

            </View>

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/edit_bg"
                android:inputType="numberDecimal"
                android:padding="12dp" />

            //TYPE YOUR HEIGHT

            <TextView
                android:id="@+id/textView5"
                android:layout_width="342dp"
                android:layout_height="31dp"
                android:layout_marginHorizontal="30dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="Type Your Height in {Cm}"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp">

            </View>


            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edit_bg"

                android:inputType="numberDecimal"

                                android:padding="12dp" />
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"></View>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:background="@android:color/background_dark">

            </View>


            <Button
                android:id="@+id/btCalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="15dp"
                android:background="@drawable/btn_bg"
                android:gravity="center"
                android:scrollbarTrackHorizontal="@drawable/btn_bg"
                android:text="@string/btCalculate"
                android:textColor="#fafafa" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.5dp"
                android:background="@android:color/background_dark">

            </View>

            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"></View>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="114dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/iconbmi" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"></View>


        </LinearLayout>
    </ScrollView>

</LinearLayout>


